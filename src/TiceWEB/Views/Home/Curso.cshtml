<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">
                    Registrar Actividad
                    <img src="~/images/Bb_learn_small.png" style="width:100px;float:right" />
                </h4>
            </div>
            <div class="modal-body">
                <form id="guardarActividad">
                    <div class="row">
                        <div class="col-xs-4 form-group">
                            <label>Curso :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <input type="hidden" id="inputActividadCursoCodigo"/>
                            <input class="form-control" type="text" id="inputActividadCursoNombre" disabled/>
                            <!--
                            <select class="form-control" id="selectCurso">
                                <option>Seleccione</option>
                            </select>
                            -->
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Tipo :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectTipo">
                                <option>Seleccione</option>
                                <option value="1">Presencial</option>
                                <option value="2">Virtual</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Titulo :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <input class="form-control" type="text" id="inputTitulo" />
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Fecha Inicio :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <input class="form-control" type="text" id="datepicker1">
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Fecha Fin :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <input class="form-control" type="text" id="datepicker2">
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Sesión :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectSesion">
                                <option>Seleccione</option>
                                <option value="1">Presencial</option>
                                <option value="2">Virtual</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Estado :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectEstado">
                                <option>Seleccione</option>
                                <option value="1">Presencial</option>
                                <option value="2">Virtual</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Descripción :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <textarea class="form-control" rows="3" id="textareaDesc"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarActividad">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModalCurso" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">
                    Editar Curso
                    <img src="~/images/Bb_learn_small.png" style="width:100px;float:right" />
                </h4>
            </div>
            <div class="modal-body">
                <form id="guardarCurso">
                    <div class="row">
                        <div class="col-xs-4 form-group">
                            <label>Curso :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <input type="hidden" id="inputCursoCodigo" />
                            <input class="form-control" type="text" id="inputCursoNombre" />
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Estado :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectCursoEstado">
                                <option>Seleccione</option>
                                <option value="A">Activo</option>
                                <option value="I">Inactivo</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Observación :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <textarea class="form-control" rows="3" id="textareaObs"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnEditarCurso">Guardar</button>
            </div>
        </div>
    </div>
</div>

