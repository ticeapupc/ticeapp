<!-- Modal -->
<div class="modal fade" id="myModalEditDocumento" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">
                    Editar Documento
                    <img src="~/images/Bb_learn_small.png" style="width:100px;float:right" />
                </h4>
            </div>
            <div class="modal-body">
                <form id="guardarDocumento">
                    <div class="row">
                        <div class="col-xs-4 form-group">
                            <label>Curso :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectDocCurso">
                                <option>Seleccione</option>
                                <option value="1">Lógica</option>
                                <option value="2">Aritmética</option>
                                <option value="3">Algebra</option>
                                <option value="4">Lenguaje</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Actividad :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectDocActividad">
                                <option>Seleccione</option>
                                <option value="1">Análisis</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Tarea :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectDocTarea">
                                <option>Seleccione</option>
                                <option value="1">Actualizar Focus</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Titulo :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <input class="form-control" type="text" id="inputDocTitulo" />
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Autor :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <input class="form-control" type="text" id="inputDocAutor" />
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Tipo :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <select class="form-control" id="selectDocTipo">
                                <option>Seleccione</option>
                                <option value="1">Tipo 1</option>
                                <option value="2">Tipo 2</option>
                            </select>
                        </div>
                        <div class="col-xs-4 form-group">
                            <label>Descripción :</label>
                        </div>
                        <div class="col-xs-8 form-group">
                            <textarea class="form-control" rows="3" id="textareaDocDesc"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarDocumento">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-sm" id="myModalDelDocumento" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">
                    <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 form-group">
                        <label>Está seguro de eliminar esta Documento</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Si</button>
            </div>
        </div>
    </div>
</div>

